@model IEnumerable<Data_Layer.Models.Favourite>


<div class="col-md-10" style="margin-top:80px">
    <div class="card mb-4">
        @if (!Model.Any())
        {
            <p>@ViewBag.MessageFav</p>
        }
        else
        {
            @foreach (var item in Model)
            {
                <div class="card-header py-3">
                    <h5 class="mb-0">Favourites</h5>
                </div>
                <div class="card-body itemcardbody">
                    <!-- Single item -->
                    <div class="row">
                        <div class="col-lg-3 col-md-12 mb-4 mb-lg-0">
                            <!-- Image -->
                            <div class="bg-image hover-overlay hover-zoom ripple rounded" data-mdb-ripple-color="light">
                                <img src="@item.ProductImage"
                             class="w-100" alt="Blue Jeans Jacket" />
                                <a href="#!">
                                    <div class="mask" style="background-color: rgba(251, 251, 251, 0.2)"></div>
                                </a>
                            </div>
                            <!-- Image -->
                        </div>

                        <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                            <!-- Data -->
                            <p><strong>@item.ProductName</strong></p>
                            <a href="@Url.Action("RemoveProduct","Favourites",new{id = item.FavouriteId})">
                                <button type="button" class="btn btn-primary btn-sm me-1 mb-2" data-mdb-toggle="tooltip"
                                title="Remove item">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </a>

                            <button type="button" class="btn btn-danger btn-sm mb-2" data-mdb-toggle="tooltip"
                            title="Move to the wish list">
                                <i class="fas fa-heart"></i>
                            </button>
                            <!-- Data -->
                        </div>

                        <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                            <!-- Price -->
                            <p class="text-start text-md-center">
                                <strong id="ItemPrice">Rs.@item.ProductPrice</strong>
                            </p>
                            <!-- Price -->
                        </div>
                    </div>
                    <!-- Single item -->

                    <hr class="my-4" />
                </div>
            }
        }
    </div>
</div>