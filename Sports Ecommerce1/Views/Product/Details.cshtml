@model Data_Layer.Models.Product
@{
	Layout = "_Layout1";
}


<div class="container">
	<div class="card detailcard">
		<div class="container-fliud">
			<div class="wrapper row">
				<div class="preview col-md-6">

					<div class="preview-pic tab-content">
						<div class="tab-pane active" id="pic-1"><img src=@Html.DisplayFor(model => model.ImageUrl) /></div>
						<div class="tab-pane" id="pic-2"><img src= @Html.DisplayFor(model => model.ImageUrl) /></div>
						<div class="tab-pane" id="pic-3"><img src=@Html.DisplayFor(model => model.ImageUrl) /></div>
						<div class="tab-pane" id="pic-4"><img src=@Html.DisplayFor(model => model.ImageUrl) /></div>
						<div class="tab-pane" id="pic-5"><img src=@Html.DisplayFor(model => model.ImageUrl) /></div>
					</div>

				</div>
				<div class="details col-md-6">
					<h3 class="product-title">@Html.DisplayFor(model => model.ProductName)</h3>
					<div class="rating">
						<div class="stars">
							<span class="fa fa-star checked"></span>
							<span class="fa fa-star checked"></span>
							<span class="fa fa-star checked"></span>
							<span class="fa fa-star"></span>
							<span class="fa fa-star"></span>
						</div>
						<span class="review-no">41 reviews</span>
					</div>
					<p class="product-description">@Html.DisplayFor(model => model.Description)</p>
					<h4 class="price">current price: <span>@Html.DisplayFor(model => model.Price)</span></h4>
					<p class="vote"><strong>91%</strong> of buyers enjoyed this product! <strong>(87 votes)</strong></p>
					<div class="action">
						@if (ViewBag.Sessiondata == "null" || ViewBag.Sessiondata == null)
						{
							<a href="@Url.Action("Login","User")" class="add-to-cart btn btn-primary">AddToCart</a>
						}else
						{
						<a href="@Url.Action("AddTocart","cart",new{id = Model.ProductId})" class="add-to-cart btn btn-primary">AddToCart</a>
						}
						
						<button class="like btn btn-default" type="button"><span class="fa fa-heart"></span></button>

					</div>
				</div>
			</div> 
		</div>
	</div>
</div>